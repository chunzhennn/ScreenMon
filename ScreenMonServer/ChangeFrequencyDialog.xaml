<Window x:Class="ScreenMonServer.ChangeFrequencyDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScreenMonServer"
        mc:Ignorable="d"
        Title="更改截图频率" Height="130" Width="209" ResizeMode="NoResize" SizeToContent="WidthAndHeight">
    <Grid>
        <Label Content="请输入截图频率（单位：秒）" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox Name="FrequencyTextBox" HorizontalAlignment="Left" Margin="10,40,0,0" TextWrapping="Wrap" Text="5" VerticalAlignment="Top" Width="172" Height="31" TextAlignment="Left" VerticalContentAlignment="Center"/>
        <Button Name="OkButton" Content="确定" HorizontalAlignment="Left" Margin="139,86,0,0" VerticalAlignment="Top" Width="43" Click="OkButton_OnClick"/>
        <Button Name="CancelButton" Content="取消" HorizontalAlignment="Center" Margin="0,86,0,0" VerticalAlignment="Top" Width="43" Click="CancelButton_OnClick"/>

    </Grid>
</Window>
